{
  "serial": {
    "port": ["/dev/tty.usbserial-0001", "/dev/ttyUSB0", "/dev/ttyUSB1", "/dev/tty.usbmodem101", "/dev/tty.usbmodem1101", "/dev/tty.usbmodem2101"]
  },
  "services": {
    "mail": true,
    "test": true,
    "wetter": true,
    "google": true,
    "news": true,
    "wiki": true,
    "translate": true,
    "warn": true,
    "radar": true,
    "ignore": true,
    "echo": true
  },
  "log": {
    "enabled": false,
    "api_url": "https://example.com/api/meshlog.php",
    "api_key": "your-log-api-key"
  },
  "mail": {
    "smtp": {
      "server": "smtp.example.com",
      "port": "587",
      "user": "user@example.com",
      "password": "your-smtp-password"
    },
    "default_sender": "Mesh-Service"
  },
  "weather": {
    "api_key": "your-weather-api-key",
    "provider": "wttr.in"
  },
  "php": {
    "api_key": "your-php-api-key"
  },
  "radar_channel_index": 3,
  "radar_api_log": {
    "url": "https://example.com/scripts/addDetection.php",
    "key": "your-php-api-key"
  },
  "radar": {
    "Radar-Sample": {
      "aliasName": "Sample Radar",
      "mail": "02:00-06:00",
      "ignore": false,
      "mail_to": "test@test.com",
      "postStateInfo": false,
      "ghost": false,
      "detectionsToAlert": {
        "timeSpan": 60,
        "detections": 2
      }
    }
  }
}
